<?xml version="1.0" encoding="UTF-8"?>
<!-- 指定校验配置文件的DTD信息 -->
<!DOCTYPE validators PUBLIC 
"-//Apache Struts//XWork Validator 1.0.2//EN" 
"http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
<!-- 校验文件的根元素 -->
<validators>
	<!-- 校验Action的"roleName"属性 -->
	<field name="roleName">
		<!-- 指定name属性必须满足必填规则 -->
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>必须输入角色名称</message>
		</field-validator>
		<!-- 指定roleName属性必须匹配正则表达式 
		<field-validator type="regex">
			<param name="expression"><![CDATA[(^[\\u4E00-\\u9FA5\\uF900-\\uFA2D]+$)]]></param>
			<message>您输入的角色名称只能是中文</message>
		</field-validator>-->
	</field>
	<!-- 校验Action的roleDesc属性 -->
	<field name="roleDesc">
		<!-- 指定roleDesc属性必须满足必填规则 -->
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>必须输入角色描述</message>
		</field-validator>
		<!-- 指定roleDesc属性必须满足匹配指定的正则表达式 
		<field-validator type="regex">
			<param name="expression"><![CDATA[(^[\\u4E00-\\u9FA5\\uF900-\\uFA2D]+$)]]></param>
			<message>您输入的角色描述只能是中文</message>
		</field-validator>-->
	</field>
</validators>