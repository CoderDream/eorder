<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
						"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="com.innovaee.eorder.web.action.admin.user" namespace="/user"
		extends="struts-base">

		<action name="doLoad" class="com.innovaee.eorder.web.action.admin.user.UserAction"
			method="doLoad">
			<result name="input">/pages/admin/user/user.jsp</result>
			<result>/pages/admin/user/user.jsp</result>
		</action>
		<action name="doUser" class="com.innovaee.eorder.web.action.admin.user.UserAction"
			method="doUser">
			<result name="input">/pages/admin/user/user.jsp</result>
			<result>/pages/admin/user/user.jsp</result>
		</action>
		<action name="doList" class="com.innovaee.eorder.web.action.admin.user.UserAction"
			method="doList">
			<result name="input">/pages/admin/user/user.jsp</result>
			<result>/pages/admin/user/user.jsp</result>
		</action>
		<action name="doEdit" class="com.innovaee.eorder.web.action.admin.user.UserAction"
			method="doLoad">
			<result name="input">/pages/admin/user/user.jsp</result>
			<result>/pages/admin/user/user.jsp</result>
		</action>

		<action name="doRemove" class="com.innovaee.eorder.web.action.admin.user.UserAction"
			method="doRemove">
			<result type="redirect">doUser.action</result>
		</action>

		<action name="save" class="com.innovaee.eorder.web.action.admin.user.UserOpAction"
			method="save">
			<result name="input">/pages/admin/user/user.jsp</result>
			<result>/pages/admin/user/user.jsp</result>
		</action>
		<action name="update" class="com.innovaee.eorder.web.action.admin.user.UserOpAction"
			method="update">
			<result name="input">/pages/admin/user/user.jsp</result>
			<result>/pages/admin/user/user.jsp</result>
		</action>
	</package>

</struts>