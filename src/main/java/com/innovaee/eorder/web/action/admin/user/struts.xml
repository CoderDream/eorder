<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
						"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="com.innovaee.eorder.web.action.admin.user" namespace="/user" extends="struts-base">
		<action name="doUser" class="com.innovaee.eorder.web.action.admin.user.UserAction" method="doUser">
			<result name="success">/pages/admin/user/user.jsp</result>
		</action>

		<action name="doList" class="com.innovaee.eorder.web.action.admin.user.UserAction" method="list">
			<result>/pages/admin/user/user.jsp</result>
		</action>
		<action name="doEdit" class="com.innovaee.eorder.web.action.admin.user.UserAction" method="load">
			<result>/pages/admin/user/userEdit.jsp</result>
		</action>
		<action name="doStore" class="com.innovaee.eorder.web.action.admin.user.UserAction" method="doStore">
			<result type="redirect">doUser.action</result>
		</action>
		<action name="doUpdate" class="com.innovaee.eorder.web.action.admin.user.UserAction" method="doUpdate">
			<result type="redirect">doUser.action</result>
		</action>
		<action name="doRemove" class="com.innovaee.eorder.web.action.admin.user.UserAction" method="remove">
			<result type="redirect">doUser.action</result>
		</action>
	</package>

</struts>